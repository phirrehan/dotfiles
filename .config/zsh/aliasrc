alias ls="ls --color=auto"
alias grep="grep --color=auto"
alias vim="nvim"
alias cfa="nvim ~/.config/zsh/aliasrc"
alias cfs="nvim ~/.config/zsh/shortcutrc"
#alias cfz="source ~/.config/zsh/.zshrc"
alias sz="source ~/.zshrc"

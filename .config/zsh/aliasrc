alias ls="ls --color"
alias grep="grep --color"
alias vim="nvim"
alias cfa="nvim ~/.config/zsh/aliasrc"
alias cfs="nvim ~/.config/zsh/shortcutrc"
alias sz="source ~/.zshrc"
alias c="clang --debug ~/cprograms/prog/practice.c -o ~/cprograms/bin/practice && ~/cprograms/bin/practice"
alias cpp="clang++ --debug ~/cprograms/prog/practice.cpp -o ~/cprograms/bin/practice++ && ~/cprograms/bin/practice++"

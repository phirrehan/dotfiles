# Package managers
alias pacf="$path_to_scripts/pacf.sh"
alias pacrm="$path_to_scripts/pacrm.sh"
alias paruf="$path_to_scripts/paruf.sh"

# System Aliases
alias ls="ls -A --color=auto"
alias grep="grep --color=auto"

# Zsh Config Aliases
alias cfa="nvim ~/.config/zsh/aliasrc"
alias cfs="nvim ~/.config/zsh/shortcutrc"
alias cfp="nvim ~/files/privateFiles/.zsh/privaterc"
alias sz="source ~/.zshrc"

# C/C++ Compiler Aliases
alias c="$path_to_scripts/c_compile.sh c practice.c"
alias cpp="$path_to_scripts/c_compile.sh cpp practice.cpp"
alias cn="$path_to_scripts/c_compile.sh c $1"
alias cppn="$path_to_scripts/c_compile.sh cpp $1"
alias tc="$path_to_scripts/nvimForC.sh"

# GPG encryption/decryption Aliases
alias enc="gpg -r phirrehan@gmail.com -e"
alias dec="gpg -d"

# Nvim
alias vim="nvim"

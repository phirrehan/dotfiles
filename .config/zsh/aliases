# Termux
if [ -n "$TERMUX_VERSION" ]; then
  alias i="nala update && nala install $1"
  alias u="nala update && nala uninstall $1"
  alias s="nala search $1"
  alias upg="nala update && nala upgrade"
  alias c="clear"
fi

# System
alias ls="ls -A --color=auto"
alias grep="grep --color=auto"

# Zsh Config
alias cfz="nvim ~/.zshrc"
alias cfa="nvim ~/.config/zsh/aliases"
alias cfs="nvim ~/.config/zsh/shortcuts"
alias cfp="nvim ~/files/privateFiles/zsh/private"
alias sz="source ~/.zshrc"

# C/C++ Compiler
alias cn="$HOME/.local/bin/c_compile c $1"
alias cppn="$HOME/.local/bin/c_compile cpp $1"

# Latex Compiler
alias ltxp="$HOME/.local/bin/latex_compiler pdf $1"
alias ltxd="$HOME/.local/bin/latex_compiler dvi $1"

# GPG encryption/decryption
alias enc="gpg -r phirrehan@gmail.com -e"
alias dec="gpg -d"

# Nvim
alias vim="nvim"

# Functions
pacf() {
  pacman -Slq | fzf --multi --preview 'pacman -Si {1}' | xargs -ro sudo pacman -S
}
pacrm() {
  pacman -Qq | fzf --multi --preview 'pacman -Qi {1}' | xargs -ro sudo pacman -Rns
}
paruf() {
  paru -Slq | fzf --multi --preview 'paru -Si {1}' | xargs -ro paru -S
}


#!/bin/bash

[ -z "$MILK_LIST" ] && MILK_LIST="$HOME/files/privateFiles/milk_list"

# Functions
writeDouble() {
  # writeDouble expects 1 argument for name of person.

  file="$MILK_LIST/$1/$recordName"
  [ ! -f "$file" ] && touch $file
  grep -iq "$doubleDate" "$file" || 
    echo "Double Milk on $doubleDate" >> "$file"
}

# Check for errors
[ ! -d $MILK_LIST/taiAmmi ] &&
  echo "Error: directory $MILK_LIST/taiAmmi does not exist." && exit 1
[ ! -d $MILK_LIST/abji ] &&
  echo "Error: directory $MILK_LIST/abji does not exist." && exit 2

echo "Select the name of record holder for entry:"
echo "1) Abji"
echo "2) Tai Ammi"
echo "3) All"
read ans
case $ans in
  1) abji=true;;
  2) taiAmmi=true;;
  3) taiAmmi=true && abji=true;;
  '') taiAmmi=true && abji=true;;
  *) echo "Error: invalid input." && exit 3;;
esac
  

# Input
read -p "Enter number of days from today: " input
[ -z "$input" ] && input='0'
[[ "$input" =~ ^-?[0-9]+$ ]] || {
  echo "Error: invalid input." 
  exit 4
}

# Date format: YYYY-MM and YYYY-MM-DD respectively
recordName=$(date -d "$input days" +%Y-%m)
doubleDate=$(date -d "$input days" +%Y-%m-%d)

# Abji
[ "$abji" = "true" ] && writeDouble abji

# Tai Ammi
[ "$taiAmmi" = "true" ] && writeDouble taiAmmi

echo -e "Double Milk written successfully!\n"
[ "$taiAmmi" = "true" ] && echo "Tai Ammi's Record" &&
  cat $MILK_LIST/taiAmmi/$recordName
[ "$abji" = "true" ] && echo -e "\nAbji's Record" &&
  cat $MILK_LIST/abji/$recordName

echo -e "\nEnter any key to exit: "; read ans
